<header class="banner">
  <div class="banner__container u-container">
    <div class="banner__title">
      <a class="p-author h-card" rel="author home" href="/">{{ app.title }}</a>
    </div>
    <nav class="banner__navigation" aria-label="site">
      {% render 'navigation' with navigation.primary
        page: page
        tags: tags
      -%}
      {% render 'navigation' with navigation.secondary
        page: page
        tags: tags
      -%}
    </nav>
  </div>
</header>
