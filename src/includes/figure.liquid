<figure class="align-{{ alignment | default: 'none' }}">
{%- if embed %}
  {%- embed embed embedPoster embedRatio -%}
{%- else %}
  {%- render 'image' with figure
    preset: imagePreset
    ratio: imageRatio | default: false
  -%}
{%- endif %}
{%- if caption %}
  <figcaption>
    {{ caption | markdown }}
  </figcaption>
{%- endif %}
</figure>
