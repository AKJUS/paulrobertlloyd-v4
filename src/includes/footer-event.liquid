<footer class="footer">
  <dl>
    <dt class="u-visually-hidden">Date</dt>
    {%- assign dateStart = start | date: dates.date_long -%}
    {%- assign dateEnd = end | date: dates.date_long -%}
    <dd>
      {%- if dateStart != dateEnd -%}
        <time class="dt-start" datetime="{{ start | date: dates.iso }}">{{ start | date: dates.date_long }}</time> -
        <time class="dt-end" datetime="{{ end | date: dates.iso }}">{{ end | date: dates.date_long }}</time>
      {%- else -%}
        <time class="dt-start" datetime="{{ start | date: dates.iso }}">{{ start | date: dates.datetime_full }}</time>
        <time class="dt-end" datetime="{{ end | date: dates.iso }}"></time>
      {%- endif -%}
    </dd>
{%- if location.name -%}
    <dt class="u-visually-hidden">Location</dt>
    <dd class="p-location h-card">
      <span class="p-name">{{ location.name }}</span>
      {%- if location.locality %}, <span class="p-adr h-adr p-locality">{{ location.locality }}</span>{% endif %}
    </dd>
{%- endif -%}
  </dl>
</footer>
