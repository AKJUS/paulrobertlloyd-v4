<section class="section" aria-labelledby="{{ id }}">
  <header>
    <h2 id="{{ id }}">{{ title }}</h2>
  </header>

{%- if section.size > 0 %}
  {%- include 'items' with section
    limit: itemsLimit
    component: itemsComponent
    gridSize: itemsGridSize
    scrollable: scrollable
  -%}
{%- else -%}
  <flow-content>
    {{ "No posts" | markdown }}
  </flow-content>
{%- endif -%}
</section>
