<search class="form" id="search" data-search-index="/archives/search.json">
  <form class="form__field" action="https://duckduckgo.com" method="get">
    <label class="form__label" for="q">Search this site</label>
    <input class="form__input" name="q" type="search" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" aria-controls="search-listbox" title="Enter search keywords" placeholder="e.g. Brasilia, Design, Olympicsâ€¦">
    <input type="hidden" name="sites" value="{{ app.url }}">
    <input type="hidden" name="kl" value="uk-en">
    <button class="form__button" type="submit">Search</button>
  </form>
  <div class="form__combobox" id="search-combobox" role="combobox" aria-expanded="false" aria-owns="search-listbox" aria-haspopup="listbox">
    <p class="visually-hidden" id="search-status" role="status" aria-live="polite">No search results.</p>
    <ul class="form__listbox" id="search-listbox" role="listbox" aria-labelledby="search-label" hidden></ul>
  </div>
</search>
<script src="/assets/scripts/search.js" type="module"></script>
