<article class="item | h-entry" id="{{ item.data.id }}">
{%- if item.data.title -%}
  <header>
    <h3 class="p-name">
      <a class="u-url" rel="bookmark" href="{{ item.url }}">{{ item.data.title | markdown: 'inline' }}</a>
    </h3>
  </header>
{%- endif -%}

{%- if item.data.jam_of -%}
  <flow-content>
    {%- render 'jam' with item.data.jam_of -%}
  </flow-content>
{%- elsif item.data.summary -%}
  <flow-content>
    <p class="p-summary">{{ item.data.summary | markdown: 'inline' }}</p>
  </flow-content>
{%- elsif item.content -%}
  <flow-content class="e-content p-name">
    {{ item.content }}
  </flow-content>
{%- endif -%}

{%- if item.data.date -%}
  <footer>
{%- if item.data.title -%}
    {%- datetime item.data -%}
{%- else -%}
    <a class="u-url" rel="bookmark" href="{{ item.url }}">
      {%- datetime item.data -%}
    </a>
{%- endif -%}
  </footer>
{%- endif -%}
</article>
