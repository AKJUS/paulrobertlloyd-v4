<article class="item | h-entry">
{%- if item.data.title -%}
  <header class="item__header">
    <h3 class="item__title | p-name">
      <a class="u-url" rel="bookmark" href="{{ item.url }}">{{ item.data.title | markdown: 'inline' }}</a>
    </h3>
  </header>
{%- endif -%}

{%- if item.data.summary -%}
  <div class="item__main s-linear | p-summary">
    {{ item.data.summary | markdown }}
  </div>
{%- elsif item.content -%}
  <div class="item__main s-linear | e-content p-name">
    {{ item.content }}
    {% if item.data.photo %}
      {%- render 'gallery' with item.data.photo
        imageClass: 'u-photo'
        imagePreset: 'card-square'
      -%}
    {% endif %}
  </div>
{%- endif -%}

  <footer class="item__footer">
{%- if item.data.title -%}
    <time class="dt-published" datetime="{{ item.date | date: dates.iso }}">{{ item.date | date: dates.date }}</time>
{%- else -%}
    <a class="u-url" rel="bookmark" href="{{ item.url }}">
      <time class="dt-published" datetime="{{ item.date | date }}">{{ item.date | date: dates.date_time | replace: ', ','<br>' }}</time>
    </a>
{%- endif -%}
  </footer>
</article>
