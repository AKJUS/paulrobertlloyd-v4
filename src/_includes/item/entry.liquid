<article class="item | h-entry" data-type="{{ item.data.type }}">
{%- if item.data.title -%}
  <header>
    <h3 class="p-name">
      <a class="u-url" rel="bookmark" href="{{ item.url }}">
        {{- item.data.title | markdown: "inline" -}}
      </a>
    </h3>
  </header>
{%- endif -%}

{%- if item.data.summary -%}
  <flow-content>
    <p class="p-summary">{{ item.data.summary | markdown: "inline" }}</p>
  </flow-content>
{%- elsif item.content -%}
  <flow-content class="e-content p-name">
    {{ item.content }}
  </flow-content>
{%- endif -%}

{%- if item.data.date or item.data.start -%}
  <footer>
{%- if item.data.title -%}
    {%- datetime item.data true -%}
{%- else -%}
    <a class="u-url" rel="bookmark" href="{{ item.url }}">
      {%- datetime item.data -%}
    </a>
{%- endif -%}
    {%- app_icon item.data.icon item.data.icon_label -%}
  </footer>
{%- endif -%}
</article>
