{%- assign date_color = item.data.date | color -%}
{%- assign accent_color = item.data.accent_color | default: date_color -%}
<article class="card |{% for root in item.data.vocabulary %} h-{{ root }}{% endfor %}"{% if item.data.duotoneCardImage %} style="--color-accent-light: {{ accent_color | contrast_with: 'black' }}; --color-accent-dark: {{ accent_color | contrast_with: 'white' }}"{% endif %}>
  {%- if item.data.layout == 'photo' -%}
    <a class="card__image | u-url" rel="bookmark" href="{{ item.url }}">
      {%- image item.data.page_image, 'card', 'u-photo' -%}
      {%- if item.data.photo.size > 1 -%}
        <svg width="20" height="20" role="img" aria-labelledby="photos-title" focusable="false">
          <title id="photos-title">{{ item.data.photo.size }} photos in this post</title>
          <use href="#_icon_photos"></use>
        </svg>
      {%- endif -%}
    </a>
  {%- else -%}
    {%- if item.data.page_image -%}
      <div class="card__image">
        {%- image item.data.page_image, 'card' -%}
      </div>
    {%- endif -%}

    <header class="card__header">
      <h3 class="card__title | p-name">
        <a class="u-url" rel="bookmark" href="{{ item.url }}">{{ item.data.title | markdown: 'inline' }}</a>
      </h3>
    </header>

    {%- if item.data.summary -%}
      <div class="card__main s-linear | p-summary">
        {{ item.data.summary | markdown }}
      </div>
    {%- endif -%}

    {%- if item.data.layout != 'project' -%}
      <footer class="card__footer">
      {%- if item.data.layout == 'itinerary' -%}
        <time class="dt-start" datetime="{{ item.data.start | date }}">{{ item.data.start | date: '%B %Y' }}</time>
        <time class="dt-end" datetime="{{ item.data.end | date }}"></time>
      {%- else -%}
        <time class="dt-published" datetime="{{ item.date | date }}">{{ item.date | date: dates.date_long }}</time>
      {%- endif -%}
      </footer>
    {%- endif -%}
  {%- endif -%}
</article>
