<article class="item item--archive">
  <header class="item__header">
    <h3 class="item__title">
      <a href="{{ item.url }}">{{ item.data.item_title | default: item.data.title }}</a>
    </h3>
  </header>

{%- if item.data.summary -%}
  <div class="item__main s-linear">
    {{ item.data.summary | markdown }}
  </div>
{%- endif -%}
</article>
