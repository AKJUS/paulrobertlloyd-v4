<ul class="items {%- if scrollable %} items--scrollable{% endif %}" style="--grid-size: {{ gridSize | default: '100%' }}" role="list">
{%- for item in items limit: limit -%}
  <li class="items__item">
    {%- render 'item/{{ component | default: "entry" }}'
      id: forloop.index
      item: item
    -%}
  </li>
{%- endfor -%}
</ul>
