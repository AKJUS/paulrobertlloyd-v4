<header class="header">
  <h1 class="p-name">
    {{- properties.title -}}
  </h1>
{%- if properties.type != "article" -%}
{%- if properties.summary or properties.bookmarkOf or properties.uid -%}
  <flow-content data-font="lede">
    <p class="p-summary">{{ properties.summary | markdown: "inline" }}</p>
{%- if properties.bookmarkOf -%}
    <p>{% external_url properties.bookmarkOf "u-bookmark-of" %}</p>
{%- endif -%}
{%- if properties.uid -%}
    <p>{% external_url properties.uid "u-uid" %}</p>
{%- endif -%}
  </flow-content>
{%- endif -%}
{%- endif -%}
</header>
