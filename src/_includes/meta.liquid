{%- if properties.category or properties.syndication or properties.canonical or comments -%}
<dl class="meta">
{%- if properties.category -%}
  <dt>Categories</dt>
  <dd>
    {%- render 'categories' with properties.category -%}
  </dd>
{%- endif -%}
{%- if properties.syndication -%}
  <dt>Also on</dt>
  <dd>
    {%- for url in properties.syndication %}
      {{ url | syndication }}{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
  </dd>
{%- endif -%}
{%- if properties.canonical -%}
  <dt>Original publication</dt>
  <dd>{{ properties.canonical | canonical }}</dd>
{%- endif -%}
{%- if comments -%}
  <dt>Comments</dt>
  <dd><a href="{{ comments.url }}">{{ comments.data.properties.summary }}</a></dd>
{%- endif -%}
</dl>
{%- endif -%}
