{%- if properties.inReplyTo or properties.category or properties.syndication or properties.canonical or commentsMeta -%}
<dl class="meta">
{%- if properties.inReplyTo -%}
  <dt>In reply to a post on</dt>
  <dd>{% external_url properties.inReplyTo "u-in-reply-to" %}</dd>
{%- endif -%}
{%- if properties.category -%}
  <dt>Categories</dt>
  <dd>
    {%- render "categories" with properties.category -%}
  </dd>
{%- endif -%}
{%- if properties.syndication -%}
  <dt>Also on</dt>
  <dd>
    {%- for url in properties.syndication %}
      {% syndication url %}{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
  </dd>
{%- endif -%}
{%- if properties.canonical -%}
  <dt>Original publication</dt>
  <dd>{% canonical properties.canonical %}</dd>
{%- endif -%}
{%- if commentsMeta -%}
  <dt>Comments</dt>
  <dd><a href="{{ commentsMeta.url }}">{{ commentsMeta.data.properties.summary }}</a></dd>
{%- endif -%}
</dl>
{%- endif -%}
