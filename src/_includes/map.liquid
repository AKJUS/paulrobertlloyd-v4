<figure class="align-{{ alignment | default: 'none' }}">
  <picture>
    <source
      media="(prefers-color-scheme: dark)"
      srcset="{{ map | map_url: height, width, 'dark-v10' }}">
    <img src="{{ map | map_url: height, width }}" alt="{{ alt }}">
  </picture>
{%- if caption %}
  <figcaption>
    {{ caption | markdown }}
  </figcaption>
{%- endif %}
</figure>
