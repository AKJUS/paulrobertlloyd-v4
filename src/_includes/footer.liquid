<footer class="footer">
  <dl>
    <dt class="visually-hidden">Published on</dt>
    <dd>{% datetime properties properties.title %}</dd>
{%- if properties.location -%}
    <dt class="visually-hidden">Published in</dt>
    <dd class="p-location">{% adr properties %}</dd>
{%- endif -%}
{%- if properties.in_reply_to -%}
    <dt>In reply to a post on</dt>
    <dd>{% external_url properties.in_reply_to "u-in-reply-to" %}</dd>
{%- endif -%}
  </dl>
</footer>
