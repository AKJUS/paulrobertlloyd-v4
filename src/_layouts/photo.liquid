{%- capture page_title %}{% if photo.size > 1 -%}{{ photo.size }} photos{% else %}Photo{% endif %}: {{ date | date: dates.date_time }} Â· {{ app.name }}{% endcapture -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer'
    date: date
    timeZone: timeZone
    show_time: true
    location: location
    geo: geo
    in_reply_to: in_reply_to
    canonical: canonical
    vocabulary: vocabulary
  -%}
  {%- capture content -%}
    {{- content -}}
    {%- assign columns = columns | default: 1 -%}
    {%- render 'photos' with photo
      columns: columns
      imageClass: 'u-photo'
    -%}
  {%- endcapture -%}
  {%- render 'content' with content
    properties: 'e-content p-name'
  -%}
  {%- render 'meta'
    categories: category
    syndication: syndication
  -%}
  {%- render 'remarks' with webmentions
    id: 'webmentions'
    title: 'Webmentions'
  -%}
{%- endblock -%}
