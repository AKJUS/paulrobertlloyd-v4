---
layout: default.liquid
eleventyComputed:
  page_title: "{{ photo.size | pluralise: 'photo' }}: {{ published | date: dates.date_time }}"
---
{%- render 'footer'
  properties: properties
  in_reply_to: in_reply_to
-%}
{%- capture content -%}
  {{- content -}}
  {%- assign columns = columns | default: 1 -%}
  {%- render 'gallery' with photo
    columns: columns
    imageClass: 'u-photo'
  -%}
{%- endcapture -%}
{%- render 'content' with content
  properties: 'e-content p-name'
-%}
{%- render 'meta'
  categories: category
  syndication: syndication
-%}
