---
layout: default.liquid
---
{%- assign comments = collections.comments | where: 'data.bookmark_id',id | first -%}
{%- render 'footer'
  properties: properties
-%}
{%- render 'header'
  properties: properties
-%}
{%- if bookmark_of contains 'youtube.com' or bookmark_of contains 'vimeo.com' -%}
  {%- capture embed -%}[{{ title }}]({{ bookmark_of }}){%- endcapture -%}
  {%- capture content -%}{{ embed | markdown }}{{ content }}{%- endcapture -%}
{%- endif -%}
{%- render 'content' with content -%}
{%- render 'meta'
  categories: category
  comments: comments
  syndication: syndication
-%}
