{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer-event'
    date: event.date
    location: event.location
    start: event.start
    end: event.end
    place: event.place
    vocab: event.vocab
  -%}
  {%- render 'header'
    title: title
    icon: event.icon
    summary: event.summary
    url: event.url
  -%}
  {% if event.product %}
    {%- capture content -%}
      {% render 'product' with event.product %}
      {{ content }}
    {%- endcapture -%}
  {% endif %}
  {%- render 'content' with content -%}
{%- endblock -%}
