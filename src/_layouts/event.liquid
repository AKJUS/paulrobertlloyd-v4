{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer-event'
    date: date
    location: location
    start: start
    end: end
    vocab: vocab
  -%}
  {%- render 'header'
    title: title
    icon: event.icon
    summary: summary
    url: event.url
  -%}
  {% if event.product %}
    {%- capture content -%}
      {% render 'product' with event.product %}
      {{ content }}
    {%- endcapture -%}
  {% endif %}
  {%- render 'content' with content -%}
{%- endblock -%}
