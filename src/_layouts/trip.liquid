---
layout: default.liquid
---
{%- assign related = collections.itinerary | find: 'data.id',tags[0] -%}
{%- render 'footer'
  properties: properties
-%}
{%- render 'header'
  properties: properties
-%}
{%- capture content -%}
  <p>Part of a journey to <a href="{{ related.url }}">{{ related.data.title }}</a>.</p>
  {%- capture caption -%}
    {%- render 'itinerary' with itinerary -%}
  {%- endcapture -%}
  {%- render 'route-map'
    alignment: 'bleed',
    caption: caption,
    geojson: geojson,
    outputDir: page.url
  -%}
  {{ trip.content | markdown }}
{%- endcapture -%}
<flow-content class="e-content">{{ content }}</flow-content>
