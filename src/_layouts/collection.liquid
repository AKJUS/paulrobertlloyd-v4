---
layout: default
---
{%- render 'header'
  title: title
  summary: summary
-%}
{%- if content != '' -%}
  {%- render 'content' with content -%}
{%- endif -%}
{%- assign items = collections[page.fileSlug] -%}
{%- assign itemsModifier = 'photos' if post_type == 'photo' -%}
{%- render 'section' with items
  id: 'items'
  title: 'Items in this collection'
  itemsComponent: 'card'
  itemsGridSize: '15rem'
  itemsModifier: itemsModifier
-%}
