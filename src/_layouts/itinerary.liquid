{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer-event'
    date: date
    start: start
    end: end
    vocab: vocab
  -%}
  {%- render 'header'
    title: title
    summary: summary
    url: url
    vocab: vocab
  -%}
  {%- capture content -%}
    {%- render 'map' with geojson
      alignment: 'bleed'
    -%}
    {{ place.content | markdown }}
    {%- render 'trips' with relatedTrips -%}
  {%- endcapture -%}
  {%- render 'content' with content -%}
  {%- render 'section' with related
    id: 'related'
    title: 'Related'
    itemsComponent: 'card'
    itemsGridSize: '15rem'
  -%}
{%- endblock -%}
