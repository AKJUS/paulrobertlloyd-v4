---
layout: default
---
{%- assign itinerary = collections.trip | itinerary: trip_id -%}
{%- render 'footer-event'
  date: date
  start: itinerary.start
  end: itinerary.end
  vocabulary: vocabulary
-%}
{%- render 'header'
  title: title
  summary: summary
  vocabulary: vocabulary
-%}
{%- capture content -%}
  {%- render 'map' with itinerary.geojson
    alignment: 'bleed'
  -%}
  {{ place.content | markdown }}
  {%- render 'trips' with itinerary.trips
    id: 'trips'
    title: 'Trips'
  -%}
{%- endcapture -%}
{%- render 'content' with content -%}
{%- render 'section' with related
  id: 'related'
  title: 'Related'
  itemsComponent: 'card'
  itemsGridSize: '15rem'
-%}
