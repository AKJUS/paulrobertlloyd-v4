---
layout: default.liquid
---
{%- assign itinerary = collections.trip | itinerary: trip_id -%}
{%- render 'footer-event'
  published: published
  start: itinerary.start
  end: itinerary.end
  vocabulary: vocabulary
-%}
{%- render 'header'
  title: title
  summary: summary
  vocabulary: vocabulary
-%}
{%- capture content -%}
  {{ content | markdown }}
  {%- capture outputDir -%}{{ page.date | date: '%Y/%j/i1' }}{%- endcapture -%}
  {%- render 'route-map'
    alignment: 'bleed',
    geojson: itinerary.geojson,
    outputDir: outputDir
  -%}
  {%- render 'trips' with itinerary.trips
    id: 'trips'
    title: 'Trips'
  -%}
{%- endcapture -%}
{%- render 'content' with content -%}
{%- render 'section' with related
  id: 'related'
  title: 'Related'
  itemsComponent: 'card'
  itemsGridSize: '15rem'
-%}
