---
eleventyExcludeFromCollections: true
permalink: sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
{%- for item in collections.all reversed %}
  {%- if item.data.sitemap %}
  <url>
    <loc>{{ item.url | absolute_url: app.url }}</loc>
    <lastmod>{{ item.date | date }}</lastmod>
    <changefreq>{{ item.data.sitemap.changefreq }}</changefreq>
    <priority>{{ item.data.sitemap.priority }}</priority>
    {%- if item.data.page_image %}
    <image:image>
      <image:loc>{{ item.data.summary_image | replace: '&','&amp;' }}</image:loc>
    </image:image>{% endif %}
  </url>{% endif %}
{%- endfor %}
</urlset>
