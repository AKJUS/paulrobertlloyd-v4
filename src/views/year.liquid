---
layout: index.liquid
title: Archives
pagination:
  data: archives.years
  size: 1
  alias: archive
  addAllPagesToCollections: true
permalink: "{{ archive.url }}"
eleventyComputed:
  page_title: "{{ archive.data.introduction }}"
  introduction: "{{ archive.data.introduction }}"
---
{%- assign months = archives.months | includes: 'date',archive.fileSlug -%}
{%- render 'section' with months
  id: 'browse',
  title: 'Browse by month'
  itemsComponent: 'archive'
  itemsGridSize: '9rem'
-%}
{%- assign featured = collections.article | where: 'data.featured' | includes: 'data.date',archive.fileSlug -%}
{%- render 'section' with featured
  id: 'featured'
  title: 'Select articles from this year'
  scrollable: true
  itemsLimit: 3
  itemsGridSize: '15rem'
  itemsComponent: 'card'
-%}
