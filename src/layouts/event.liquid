{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer-event'
    date: date
    start: start
    end: end
    place: place
    vocab: vocab
  -%}
  {% if movie %}
    {%- render 'header'
      title: title
      url: url
    -%}
    {%- capture content -%}
      {% render 'product' with product %}
      {{ summary | markdown }}
      {{ content }}
    {%- endcapture -%}
  {%- else -%}
    {%- render 'header'
      title: title
      summary: summary
      url: url
    -%}
  {% endif %}
  {%- render 'content' with content -%}
  {%- render 'section' with relatedArticles
    id: 'related'
    title: 'Related articles'
    itemsGridSize: '15rem'
  -%}
  {% for this in category %}
    {%- capture sectionTitle %}Other {{ this }} events{%- endcapture -%}
    {%- assign relatedEvents = collections.event | includes: 'data.category',this | excludes: 'url',page.url | reverse -%}
    {%- render 'section' with relatedEvents
      id: 'related'
      title: sectionTitle
      itemsModifier: 'inline'
    -%}
  {%- endfor -%}
{%- endblock -%}
