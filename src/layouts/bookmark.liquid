{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer'
    date: date
  -%}
  {%- render 'header'
    title: title
    summary: false
    url: bookmarkOf
    url_class: 'bookmark-of'
    vocab: vocab
  -%}
  {%- if bookmarkOf -%}
    {%- capture content -%}
      <p><a href="{{ bookmarkOf }}">Watch ‘{{ title }}’</a></p>
      {{ content }}
    {%- endcapture -%}
  {%- endif -%}
  {%- render 'content' with content -%}
  {%- render 'meta'
    categories: category
    syndication: syndication
  -%}
  {%- render 'remarks' with remarks
    id: 'remarks'
    title: 'Remarks'
  -%}
  {%- render 'remarks' with webmentions
    id: 'webmentions'
    title: 'Webmentions'
  -%}
{%- endblock -%}
