{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer'
    date: false
    geo: place.geo
  -%}
  {%- render 'header'
    title: title
    icon: place.icon
    url: place.url
    vocab: vocab
  -%}
  {%- capture content -%}
    {%- capture pin -%}
      pin-l+{{ app.accentColor | remove: '#' }}({{ place.geo.longitude }},{{ place.geo.latitude }})
    {%- endcapture -%}
    {%- capture position -%}
      {{ place.geo.longitude }},{{ place.geo.latitude }},15,0.00,0.00
    {%- endcapture -%}
    {%- capture caption -%}
      {%- render 'address' with place.address -%}
    {%- endcapture -%}
    {%- render 'map'
      pin: pin
      position: position
      caption: caption
      alignment: 'bleed'
    -%}
    {{ place.content | markdown }}
  {%- endcapture -%}
  {%- render 'content' with content -%}
  {%- assign relatedEvents = collections.attended | includes: 'data.event.placeId',place.address.plus_code | reverse -%}
  {%- render 'section' with relatedEvents
    id: 'events'
    title: 'Events at this location'
    itemsModifier: 'inline'
    itemHideSummary: true
  -%}
{%- endblock -%}
